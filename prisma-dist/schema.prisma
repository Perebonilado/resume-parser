generator client {
  provider = "prisma-client-js"
  output   = "../prisma-dist"
}

datasource db {
  provider  = "postgresql"
  url       = env("NEXT_PUBLIC_DATABASE_URL")
  directUrl = env("NEXT_PUBLIC_DIRECT_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())

  resumes         Resume[] // one user -> many resumes
  resumeHistories ResumeHistory[] // optional: if you ever want to find histories by user

  @@index([createdAt(sort: Desc)])
}

model Resume {
  id     Int @id @default(autoincrement())
  userId Int

  fileName   String
  fileSize   Int
  fileUrl    String
  resumeData Json

  uploadedAt DateTime @default(now())

  // Relationships
  user    User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  history ResumeHistory? @relation("ResumeToHistory") // one resume -> one history (optional)

  @@index([userId])
  @@index([uploadedAt(sort: Desc)])
}

model ResumeHistory {
  id       Int @id @default(autoincrement())
  resumeId Int @unique // one resume -> one history
  userId   Int

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  resume Resume @relation("ResumeToHistory", fields: [resumeId], references: [id])

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([createdAt(sort: Desc)])
}
